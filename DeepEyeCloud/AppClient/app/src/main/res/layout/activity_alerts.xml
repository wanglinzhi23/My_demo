<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="@color/activity"
    android:orientation="vertical"
    tools:context="com.intellif.eyecloud.setting.AlertsActivity">
    <com.intellif.eyecloud.utils.TitleLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.intellif.eyecloud.utils.TitleLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/alert_message"
            android:padding="@dimen/padd10"
            android:textSize="@dimen/content_size15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padd10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.suke.widget.SwitchButton
                android:id="@+id/alert_button"
                android:layout_width="48dp"
                android:layout_height="31dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
