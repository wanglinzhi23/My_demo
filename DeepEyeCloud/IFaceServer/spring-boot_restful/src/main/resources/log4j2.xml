<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="PID">????</Property>
        <Property name="LOG_PATTERN">[%d{yyyy-MM-dd HH:mm:ss.SSS}]
            log4j2%X{context} - ${sys:PID} %5p [%t] --- %c{1}: %m%n
        </Property>
    </Properties>
    <Appenders>
        <RollingFile name="RollingFile" fileName="logs/intellif_.log"
                     filePattern="logs/app-%d{MM-dd-yyyy}.log.gz" ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Filters>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
              </Filters>
            <TimeBasedTriggeringPolicy/>
             <DefaultRolloverStrategy max="2"/>
        </RollingFile>
        
        <RollingFile name="RollingFile1" fileName="logs/searchRecord.log"
                     filePattern="logs/search-%d{MM-dd-yyyy}.log.gz" ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Filters>
                <ThresholdFilter level="info" onMatch="DENY" onMismatch="NEUTRAL"/>  
                <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="NEUTRAL"/> 
              </Filters>
            <TimeBasedTriggeringPolicy/>
        </RollingFile>
        
         <!-- <RollingFile name="RollingFile2" fileName="logs/interfaceRecord.log"
                     filePattern="logs/interface-%d{MM-dd-yyyy}.log.gz" ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d %m%n</Pattern>
            </PatternLayout>
            <Filters>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="NEUTRAL"/>  
                <ThresholdFilter level="debug" onMatch="DENY" onMismatch="NEUTRAL"/> 
              </Filters>
            <TimeBasedTriggeringPolicy/>
        </RollingFile> -->
        
        <RollingFile name="RollingFile2" fileName="logs/interfaceRecord.log"
                     filePattern="log/$${date:yyyy-MM}/interface-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %m%n</Pattern>
            </PatternLayout>
            <Filters>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="NEUTRAL"/>  
                <ThresholdFilter level="debug" onMatch="DENY" onMismatch="NEUTRAL"/> 
              </Filters>
            <!-- <SizeBasedTriggeringPolicy size="50MB"/> -->
            <SizeBasedTriggeringPolicy size="2KB"/>
            <DefaultRolloverStrategy max="2"/>
        </RollingFile>
        
        <Console name="STDOUT" target="SYSTEM_OUT" ignoreExceptions="false">
            <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d %p %c{1.} [%t] %m%n"/>
        </Console>
     
        
    </Appenders>
    

    
    <Loggers>
        <Logger name="org.hibernate.validator.internal.util.Version"
                level="warn"/>
        <Logger name="org.apache.coyote.http11.Http11NioProtocol"
                level="warn"/>
        <Logger name="org.apache.tomcat.util.net.NioSelectorPool"
                level="warn"/>
        <Logger name="org.apache.catalina.startup.DigesterFactory"
                level="error"/>
        <Logger name="com.mangofactory.swagger"
                level="error"/>
                
        <logger name="intellif.aspects.InterfaceAspect" level="error" additivity="false">
            <appender-ref ref="RollingFile2"/>
        </logger>        

        <Root level="debug">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="RollingFile1"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
